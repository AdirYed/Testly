:root { /*https://uigradients.com/#Flare*/
    --header-height: 3rem;
    --primary-color-rgb: 245, 175, 25;
    --primary-color: rgb(var(--primary-color-rgb));
    --secondary-color: #fa163f;
}

@media (min-width: 768px){
    :root {
        --header-height: 3.75rem;
    }
}

.testly-icon {
    background: url('/assets/icon.png') no-repeat center;
    background-size: 100%;
}

.btn {
    @apply font-bold py-3 px-5;
}

.link {
    @apply border-b border-transparent text-primary;

    &:hover {
      @apply border-primary;
    }
}
